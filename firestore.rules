rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.email == 'hagaaty@gmail.com';
    }

    // Users: Users can read/update their own profile. Admin can do anything.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isSignedIn(); // Allow user creation on signup
      allow list, write, delete: if isAdmin();
    }
    
    // Services: All users can read the services. Only admin can write.
    match /services/{serviceId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // Orders: Users can create, read, and list their own orders. Admin can do anything.
    match /users/{userId}/orders/{orderId} {
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow read, list: if isOwner(userId);
        allow write, delete, update: if isAdmin(); // Admin can modify/delete any order
    }

    // Campaigns: Users can create, read, and list their own campaigns. Admin can do anything.
    match /users/{userId}/campaigns/{campaignId} {
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow read, list: if isOwner(userId);
        allow write, delete, update: if isAdmin(); // Admin can modify/delete any campaign
    }

    // Deposits: Users can create, read, and list their own deposits. Admin can do anything.
    match /users/{userId}/deposits/{depositId} {
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow read, list: if isOwner(userId);
        allow write, delete, update: if isAdmin(); // Admin can modify/delete any deposit
    }
    
    // Affiliate Transactions: Users can read their own transactions. Admin can do anything.
    match /users/{userId}/affiliateTransactions/{transactionId} {
        allow read, list: if isOwner(userId);
        // Transactions are created server-side or via trusted functions
        allow create, write, delete, update: if isAdmin(); 
    }

    // Tickets: Users can create and manage their own tickets. Admin can read/write all tickets.
    match /users/{userId}/tickets/{ticketId} {
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow read, list, update: if isOwner(userId) || isAdmin();
        allow delete: if isAdmin();
    }

    // BlogPosts: Publicly readable, only admin can write.
    match /blogPosts/{blogPostId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Settings: Only admin can read/write global settings.
    match /settings/{settingId} {
        allow read, write: if isAdmin();
    }
  }
}
