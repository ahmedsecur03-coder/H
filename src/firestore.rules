rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to update their own data, and allow any authenticated user to read user data.
    // This also implicitly allows admins (who are authenticated users) to perform writes needed for transactions.
    match /users/{userId} {
      allow read, update: if request.auth != null;
      allow create, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow broader access for other collections for any authenticated user.
    // This simplifies rules for services, orders, etc., assuming business logic is handled client-side.
    match /{path=**}/documents/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
