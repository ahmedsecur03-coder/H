rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Settings are public to read, but only admin can write.
    match /settings/global {
      allow read;
      allow write: if isAppAdmin();
    }
    
    // Blog posts are public to read, but only admin can write/delete.
    match /blogPosts/{postId} {
      allow read;
      allow write, delete: if isAppAdmin();
    }
    
    // System logs can only be created by an admin (or server functions acting as one)
    // and can only be read by admins.
    match /systemLogs/{logId} {
      allow read, write: if isAppAdmin();
    }
    
    // Daily stats can only be written by the server (via transactions) and read by admins.
    match /dailyStats/{date} {
      allow read: if isAppAdmin();
      // Write is implicitly handled by server-side transactions which bypass these rules.
      // We deny client-side writes for safety.
      allow write: if false; 
    }

    // Dynamic service prices are public to read, but only admin can write.
    match /servicePrices/{serviceId} {
        allow read;
        allow write: if isAppAdmin();
    }

    // User-specific data rules
    match /users/{userId} {
      // A user can read their own document.
      // An admin can read any user document.
      allow read: if request.auth.uid == userId || isAppAdmin();

      // A user can update their own document.
      // An admin can update any user document.
      allow update: if request.auth.uid == userId || isAppAdmin();
      
      // A user can create their own document (on signup).
      allow create: if request.auth.uid == userId;

      // Only an admin can delete a user.
      allow delete: if isAppAdmin();

      // Rules for user subcollections
      match /orders/{orderId} {
        // User can read and create their own orders.
        // Admin can read any order.
        allow read, create: if request.auth.uid == userId;
        // Only admin can update order status.
        allow update: if isAppAdmin();
        // Nobody can delete orders from the client to preserve history.
        allow delete: if false; 
      }

      match /campaigns/{campaignId} {
          // User can manage their own campaigns.
          // Admin can read any campaign.
          allow read, create: if request.auth.uid == userId;
          // User can update their own campaign (e.g. to stop it). Admin can update any.
          allow update: if request.auth.uid == userId || isAppAdmin();
          allow delete: if request.auth.uid == userId || isAppAdmin();
      }
      
      match /agencyAccounts/{accountId} {
          // User can manage their own agency accounts. Admin can read any.
          allow read, create: if request.auth.uid == userId;
          allow update: if request.auth.uid == userId || isAppAdmin();
          allow delete: if isAppAdmin();
      }

      match /deposits/{depositId} {
        // User can read and create their own deposit requests.
        allow read, create: if request.auth.uid == userId;
        // Only admin can update deposit status (approve/reject).
        allow update: if isAppAdmin();
        // Deposits older than 5 days can be deleted by admin (maintenance).
        allow delete: if isAppAdmin();
      }
      
      match /withdrawals/{withdrawalId} {
        // User can read and create their own withdrawal requests.
        allow read, create: if request.auth.uid == userId;
        // Only admin can update withdrawal status.
        allow update: if isAppAdmin();
        allow delete: if isAppAdmin();
      }

      match /affiliateTransactions/{txId} {
          // User can only read their own transactions.
          allow read: if request.auth.uid == userId;
          // Transactions are only created on the server, not by clients.
          allow write: if false;
      }

      match /tickets/{ticketId} {
          // User can read, create, and update (add messages to) their own tickets.
          // Admin can read and update any ticket.
          allow read, create, update: if request.auth.uid == userId || isAppAdmin();
          allow delete: if isAppAdmin();
      }
    }
  }
}
